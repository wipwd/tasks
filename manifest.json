{
  "manifest_version": 2,
  "name": "WWD Task Tracker",
  "short_name": "wwd task tracker",
  "description": "A task tracker for your browser",
  "version": "1.0.0",
  "permissions": ["activeTab", "storage", "tabs", "background"],
  "icons": {
    "16": "assets/icon_16px.ico"
  },
  "background": {
    "page": "index.html",
    "persistent": false
  },
  "browser_action": {
    "default_title": "WWD Tasks",
    "default_popup": "index.html"
  }
}
